<% if can? :manage, @group %>
  <div>
    <%= render @group %>

    <div class="edit-group-container">
      <div>
        <%= render "form", establishment: @establishment %>
      </div>
      
      <%= link_to "Back to establishments", group_establishments_path(@group), class: 'back-button' %>
    </div>
  </div>
<% else %>
  "Get out of here"
<% end %>