<p style="color: green"><%= notice %></p>

<h1><%= @group.name %></h1>

<div id="establishments">
  <% @establishments.each do |establishment| %>
    <%= render establishment %>
    <p>
      <%= link_to "Show this establishment", group_establishment_path(@group, establishment) %>
    </p>
  <% end %>
</div>

<%= link_to "New establishment", new_group_establishment_path(@group) %>

<%= link_to "Back to groups", groups_path %>
