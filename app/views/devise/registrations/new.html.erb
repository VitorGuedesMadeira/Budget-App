<div class="registration-header">
  <%= render "devise/shared/links" %>
  <h2>NEXT</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name', class: "registration-input" %>
  </div>

  <div>
  <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: "registration-input" %>
</div>

  <div>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "registration-input" %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', class: "registration-input" %>
  </div>

  <div class="registration-button">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
