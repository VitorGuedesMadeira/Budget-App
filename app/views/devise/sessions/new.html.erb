<div class="registration-header">
  <%= link_to image_tag('arrow-left.png'), :back, class: 'back-icon' %>
  <h2>Login</h2>
  <%= link_to "NEXT", new_user_registration_path %>
</div>

<section class="registration-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "registration-input" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "registration-input" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="registration-button">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</section>
